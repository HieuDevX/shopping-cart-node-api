{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": false,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "removeComments": true,
    "lib": ["dom", "es6", "es2016", "es2017", "esnext"],
    "declaration": false,
    "preserveConstEnums": true
  },
  "include": ["src"]
}
